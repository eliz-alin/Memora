{
  "manifest_version": 3,
  "name": "Memora",
  "version": "1.0",
  "description": "Gamified productivity extension with chibi avatars, XP, and focus quests.",
  "permissions": ["activeTab", "storage", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.mp4", "*.png", "*.jpg"],
      "matches": ["<all_urls>"]
    }
  ]
}